<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/profileFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="deakin.example.studentlearningapp.ProfileFragment"
        android:label="Profile">
        <action
            android:id="@+id/action_profile_to_history"
            app:destination="@id/historyFragment" />
        <action
            android:id="@+id/action_profile_to_share"
            app:destination="@id/shareFragment" />
    </fragment>

    <fragment
        android:id="@+id/historyFragment"
        android:name="deakin.example.studentlearningapp.HistoryFragment"
        android:label="History" />

    <fragment
        android:id="@+id/shareFragment"
        android:name="deakin.example.studentlearningapp.ShareFragment"
        android:label="Share Profile" />

</navigation>